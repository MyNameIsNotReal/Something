<section id="simple" class="example"><span class="title">Simple Example</span>
<input type="button" value="connect" id="simple-connect" class="connect"/>
<div id="simple-content" class="textbox"></div><form id="simple-form">
<input type="text" id="simple-text"/><input type="submit" value="Submit"/></form>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="http://sideeffect.kr:8005/javascripts/prettify.js"></script>
<script>
$(document).ready(function(){
   $('form').css('display', 'none');
   
//Simple Example
  $('#simple-connect').click(function() {
    $(this).unbind('click');
    var socket = io.connect();
    var content = $('#simple-content');
    socket.on('connect', function() {
      $('#simple-form').css('display', 'block');
      content.append($('<p>').text('Connected'));  
    });
    
    socket.on('message', function(msg) {
      content.append($('<p>').text(msg).append($('<em>').text(' from server')));
      content.scrollTop(content.height());
    });
    
    $('#simple-form').submit(function(e) {
      e.preventDefault();
      var textObj = $('#simple-text');   
      var msg = textObj.val();
      if (msg !== '') {
        textObj.val('');
        content.append($('<p>').text(msg).append($('<em>').text(' from me')));
        content.scrollTop(content.height());
        socket.send(msg);
      }
    });
  });
  
  
  
});</script></body></html>